<h2>client list</h2>
<table>
  <thead>
  <tr>
    <th>
      email:
    </th>
    <th>
      name:
    </th>
    <th>
      next contact date:
    </th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  {{#each clients}}
  <tr>
    <th>
      <a href="mailto:{{this.mail}}" target="_blank">{{this.mail}}</a>
    </th>
    <td>
      <a href="/client/{{this.id}}">{{this.name}}</a>
    </td>
    <td>
      {{this.nextContactAt}}
    </td>
    <td>
      <a href="/client/{{this.id}}">detail</a>
      <form method="POST" action="/client/{{this.id}}?_method=DELETE">
        <button type="submit">delete</button>
      </form>
    </td>
  </tr>
  {{/each}}
  </tbody>
</table>

<form action="/client/form/add">

  <button type="submit">Add new client</button>
</form>